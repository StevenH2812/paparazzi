<!DOCTYPE module SYSTEM "module.dtd">

<module name="uwb_follower_control" dir="uwb_control">
	<doc>
		<description>
			Control module for follower's flight along a predefined trajectory
		</description>
	</doc>
	<header>
		<file name="uwb_follower_control.h" />
	</header>
	<init fun="uwb_ndi_follower_init()" />
	<periodic fun="calcNdiCommands()" freq="20" autorun="TRUE" />
	<periodic fun="printNdiVars()" freq="1" autorun="TRUE"/>
	<makefile target="ap">
		<file name="uwb_follower_control.c" />
	</makefile>
</module>
